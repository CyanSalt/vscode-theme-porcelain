{
  "name": "vscode-theme-porcelain",
  "displayName": "Porcelain Theme",
  "description": "Porcelain theme for VSCode",
  "version": "0.1.5",
  "files": [
    "themes/*",
    "icon.png",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsx ./scripts/index.mts",
    "vscode:prepublish": "pnpm run build",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "publish:ovsx": "ovsx publish --no-dependencies"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CyanSalt/vscode-theme-porcelain.git"
  },
  "bugs": {
    "url": "https://github.com/CyanSalt/vscode-theme-porcelain/issues"
  },
  "homepage": "https://github.com/CyanSalt/vscode-theme-porcelain#readme",
  "publisher": "cyansalt",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Porcelain Light",
        "uiTheme": "vs",
        "path": "./themes/porcelain-light-color-theme.json"
      },
      {
        "label": "Porcelain Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/porcelain-dark-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "@cyansalt/eslint-config": "^4.5.0",
    "@cyansalt/tsconfig": "^3.0.1",
    "@types/node": "^24.10.1",
    "@vscode/vsce": "^3.7.1",
    "colord": "^2.9.3",
    "eslint": "^9.39.1",
    "ovsx": "^0.10.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
